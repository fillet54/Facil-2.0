<% content_for :command_navigation do %>

  <div class="btn-group">
    <%= link_to new_photo_path(album_id: album.id), class: "btn btn-primary" do %>
      <i class="icon-plus-sign icon-white"></i> Add Photo
    <% end %>
    <button class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
      <span class="caret"></span>
    </button>
    <ul class="dropdown-menu">
      <li>
        <%= link_to new_photo_path(album_id: album.id) do %>
          <i class="icon-plus-sign"></i> Add Photo
        <% end %>
      </li>
      <li>
        <%= link_to edit_album_path(album) do %>
          <i class="icon-cog"></i> Edit Album
        <% end %>
      </li>
      <li>
        <%= link_to(album, method: :delete, confirm: "You sure?") do %> 
              <i class="icon-minus-sign"></i> Delete Album 
        <% end %>
      </li>
    </ul>
  </div>
<% end %>
