<%= provide :title, "Edit Album" %>
<h1>Edit Album</h1>

<div class="row">
<div class="span6 offset3">
    <%= form_for(@album) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :description %>
      <%= f.text_field :description %>
      
      <%= f.submit "Update Album", class: "btn btn-large btn-primary"  %>
    <% end %>
  </div>
</div>
