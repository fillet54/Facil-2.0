<%= provide(:title, "Create Album") %>
<h1>Create Album</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@album) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :description %>
      <%= f.text_field :description %>
      
      <%= f.submit "Create Album", class: "btn btn-large btn-primary"  %>
    <% end %>
  </div>
</div>
