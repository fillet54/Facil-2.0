<% provide(:title, @album.name) %>

<header class="jumbotron subhead">
  <h1><%= best_in_place @album, :name %> </h1>
  <p class="lead"><%= best_in_place @album, :description %> </p>
  <%= render 'show_navigation', album: @album %>
</header>

<% if @photos.count == 0 %>
  <h1 class="notice">No Photos</h1>
<% else %>
  <div class="row">
    <div class="span8">
      <div id="selectedPhotoContainer">
        <div id="selectedPhoto">
          <%= render @photos.first %>
        </div>
      </div>
    </div>
    <div class="span4">
      <div class="row">
        <div class="gallery">
          <ul class="thumbnails">
            <%= render partial: 'photos/thumbnails', object: @photos %>
          </ul>
          <% if !(@photos.last_page?) %>
            <%= link_to "", { photos_page: (@photos.current_page + 1) }, { class: "photos-control bottom", title: "Next" } %>
          <% end %> 
          <% if !(@photos.first_page?) %>
            <%= link_to "", { photos_page: (@photos.current_page - 1) }, { class: "photos-control top", title: "Prev" } %>
          <% end %> 
        </div>
      </div>
    </div>
  </div>
<% end %>
