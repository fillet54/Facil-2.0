<% provide(:title, @album.name) %>
<h1><%= best_in_place @album, :name %> </h1>
<h2><%= best_in_place @album, :description %> </h2>

<%= will_paginate @photos, param_name: :photos_page %>

<%= render 'show_navigation', album: @album %>

<% if @album.photos.count == 0 %>
  <h1 class="notice">No Photos</h1>
<% else %>
  <div class="row">
    <div class="span8 largeThumbnail">
      <img src="<%= @album.photos.first.image_url %>"></img>
    </div>
    <div class="span4">
      <ul class="thumbnails">
        <%= render @photos %>
      </ul>
    </div>
  </div>
<% end %>
<%= will_paginate @photos, param_name: :photos_page %>
