<li class="span3">
<%= link_to image_tag(photo.image_url(:thumb).to_s,
                      alt: photo.name), 
            photo_path(photo), 
            class: "thumbnail" %>
    <strong><%= photo.name %></strong>
    <%= raw "&mdash;" unless photo.description.blank? %> 
    <%= photo.description %>
</li>
